docker-run:
	@echo "ğŸš€ Running container $(CONTAINER_NAME) with volume-mounted reports..."
	@docker run --rm -it \
		-p 8020:8020 \
		-v $(PWD)/$(REPORT_DIR):/app/reports \
		--name $(CONTAINER_NAME) \
		$(IMAGE_NAME)

